<h1>this is a form for new restaurants</h1>
<%= form_with scope: :restaurant, url: restaurants_path, local: true do |form| %>
<p>
    <%= form.label :name, "Name:" %><br>
    <%= form.text_field :name %>
</p>
 
<p>
    <%= form.label :address, "Address:" %><br>
    <%= form.text_field :address %>
</p> 
<p>
    <%= form.label :phone, "Phone Number:" %><br>
    <%= form.text_field :phone %>
</p>
 
 <p>
    <%= form.label :website, "Website:" %><br>
    <%= form.text_field :website %>
</p>

  <p>
    <%= form.submit "Add Restaurant" %>
  </p>
<% end %>